<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DefaultTextInput">
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="android:gravity">center|center_vertical</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/montserrat</item>
    </style>

    <style name="SearchTextInput">
        <item name="android:textColorHint">#5B5B5B</item>
        <item name="android:gravity">center|center_vertical</item>
        <item name="android:textSize">9sp</item>
        <item name="fontFamily">@font/poppins</item>
    </style>

    <style name="CustomFontForAppBar" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CustomFontForAppBarBata" parent="TextAppearance.AppCompat.Large">
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MainButtonsStyle" parent="Widget.Material3.Button">
        <item name="android:textSize">14sp</item>
        <item name="cornerRadius">15dp</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="backgroundTint">@color/main_buttons</item>
    </style>

    <style name="SecondButtonsStyle" parent="Widget.Material3.FloatingActionButton.Large.Primary">
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/montserrat</item>
        <item name="backgroundTint">@color/back_color_in_all_app</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textColor">@color/black</item>
        <item name="iconTint">@android:color/transparent</item>
        <item name="iconTintMode">add</item>
        <item name="android:textAlignment">textStart</item>
    </style>


</resources>